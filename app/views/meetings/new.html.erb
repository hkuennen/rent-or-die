<div class="banner" style="background-image: url(https://www.gamespot.com/a/uploads/scale_landscape/1579/15792183/3573385-w3_rangers_keyart.jpg)">
  <div class="container">
  </div>
</div>

<div class="container">
  <div class="row justify-content-center mt-3 mb-5">
    <div class="col-12 col-lg-6">
      <%= link_to "Back to all Survivalists", survivalists_path, class: "btn btn-primary mb-2" %>
    </div>
  </div>
</div>

<div class="container">
  <div class="row justify-content-center mt-1 mb-5">
    <div class="col-12 col-lg-6">
      <h1 class="text-light">Reserve a Survivalist</h1>
      <%= simple_form_for [@survivalist, @meeting] do |f| %>
        <%= f.input :start_date, as: :datetime, html5: true %>
        <%= f.input :end_date, as: :datetime, html5: true %>
        <%= f.association :survivalist %>
        <div class="btn btn-danger text-light">
          <%= f.button :submit %>
        </div>
      <% end %>
    </div>
  </div>
</div>
