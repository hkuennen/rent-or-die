  <div class="new-survivalist">
    <h1> <strong>Survivalist Profile</strong> !</h1>
    <%= simple_form_for(@survivalist) do |f| %>
      <%= f.input :name %>
      <%= f.input :category, as: :select, collection: ["Engineer", "Medical", "Destroyer", "Cook", "Hunter"] %>
      <%= f.input :skills %>
      <%= f.input :street %>
      <%= f.input :city %>
      <%= f.input :postcode %>
      <%# <%= f.input :photo, as: :file %> 
      <%= f.submit "Submit", class: "btn btn-success" %>
    <% end %>
  </div>
