<div class="p-3 mb-2 bg-dark text-light">
  <div class="gradient">
    <div class="container">
      <h1 class="text-center my-4 text-color">	&darr; My Survivalists! &darr;</h2>
      <div class="cards">
        <% @meetings.each do |meeting| %>
          <div class="card-trip my-4">
            <%= cl_image_tag meeting.survivalist.user.photo.key %>
            <div class="card-trip-infos">
              <h2><%= meeting.survivalist.name %></h2>
              <p><%= meeting.survivalist.category %></p>
              <p>Skill: <%= meeting.survivalist.skills %></p>
            </div>
            <div class="container d-flex justify-content-between">
              <div>
                <p class="ms-2">From <span><em><%= meeting.start_date.strftime("%d.%m.%Y %H:%M") %></em></span></p>
                <p class="ms-2">to <span><em><%= meeting.end_date.strftime("%d.%m.%Y %H:%M") %></em></p></span></p>
              </div>

              <div>
                <p class="me-2"><strong>Â£222999.99/day</strong></p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <p class="text-center mt-3"><%= link_to "Back to Homepage", root_path, class: "text-center" %></p>
  </div>
</div>
